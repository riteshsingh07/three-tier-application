pipeline {
    
    agent {label "three"}
    
    environment {
        SONAR_HOME = tool "SonarQube"
        AWS_ACCOUNT_ID = "705307574472"
        AWS_ECR_REPO_NAME = "backend_ecr"
        AWS_DEFAULT_REGION = 'ap-south-1'
        REPOSITORY_URI = "705307574472.dkr.ecr.ap-south-1.amazonaws.com"
    }
    
    stages {
        stage('Github Code Clone') {
            steps {
                echo 'Cloning the Code'
                git url : "https://github.com/riteshsingh07/three-tier-application.git", branch : "main"
                echo "Cloning Done!"
            }
        }
        stage("SonarQube Check") {
            steps {
                echo "SonarQube Quality Check"
                dir('Application-Code/backend') {
                    withSonarQubeEnv('SonarQube') {
                        sh ''' $SONAR_HOME/bin/sonar-scanner \
                        -Dsonar.projectName=three-tier-backend \
                        -Dsonar.projectKey=three-tier-backend '''
                echo "SonarQube Check Done!"
                    }
                }
            }
        }
        stage('OWASP Dependency-Check') {
            steps {
                dir('Application-Code/backend') {
                    echo "OWASP Check Started"
                    dependencyCheck additionalArguments: '--scan ./ --disableYarnAudit --disableNodeAudit', odcInstallation: 'OWASP'
                    dependencyCheckPublisher pattern: '**/dependency-check-report.xml'
                    echo "OWASP Check Done!"
                }
            }
        }
        stage('Trivy File Scan') {
            steps {
                dir('Application-Code/backend') {
                    echo "Trivy File Check"
                    sh 'trivy fs . > trivyfs.txt'
                    echo "Trivy File Check Done!"
                }
            }
        }
        stage("Docker Image Build") {
            steps {
                script {
                    dir('Application-Code/backend') {
                    echo "Image Building"
                    sh 'docker system prune -f'
                    sh 'docker container prune -f'
                    sh "docker build -t backend_image:latest ."
                    echo "Image Build Done!"
                    }
                }
            }
        }
        stage("ECR Image Pushing") {
            steps {
                script {
                        echo "ECR Login and Image Push"
                        sh 'aws ecr get-login-password --region ${AWS_DEFAULT_REGION} | docker login --username AWS --password-stdin ${REPOSITORY_URI}'
                        sh 'docker tag backend_image:latest ${REPOSITORY_URI}/${AWS_ECR_REPO_NAME}:latest'
                        sh 'docker push ${REPOSITORY_URI}/${AWS_ECR_REPO_NAME}:latest'
                        echo "Image Pushed to ECR!"
                }
            }
        }
        stage("Trivy Image Scan") {
            steps {
                dir('Application-Code/backend') {
                    echo "Trivy Scanning Image"
                    sh 'trivy image ${REPOSITORY_URI}/${AWS_ECR_REPO_NAME}:latest > trivyimage.txt'
                    echo "Image Scanning Done!"
                }
            }
        }
    }
}